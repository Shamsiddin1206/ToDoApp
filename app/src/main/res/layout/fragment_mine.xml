<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MineFragment">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:src="@drawable/ic_person"
        android:id="@+id/MinePersonPicture"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep plans for 5 days"
        app:layout_constraintTop_toTopOf="@id/MinePersonPicture"
        app:layout_constraintStart_toEndOf="@id/MinePersonPicture"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/MinePersonPicture"
        app:layout_constraintStart_toEndOf="@id/MinePersonPicture"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="12dp"
        android:text="Good luck" />

    <TextView
        android:id="@+id/MineTaskOverviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasks Overview"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/MinePersonPicture"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/MinePersonPicture"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/MineTaskOverviewText"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#EDF1F4"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp">
            <TextView
                android:id="@+id/MineNumberOfCompletedTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Tasks"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#EDF1F4"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp">
            <TextView
                android:id="@+id/MineNumberOfPendingTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Tasks"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>