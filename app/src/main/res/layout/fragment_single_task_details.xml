<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SingleTaskDetailsFragment">
    <ImageView
        android:id="@+id/backToTaskMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backToTaskMenu"
        android:text="Task name"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/DetailsTaskName"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/DetailsTaskName"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/TaskImage"
        android:scaleType="centerInside"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/TaskImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Camera"
        android:id="@+id/addImage"
        android:backgroundTint="#4CAF50"
        android:text="Upload Image"
        android:layout_marginTop="30dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Camera"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/addImage"
        app:layout_constraintStart_toEndOf="@id/addImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#2196F3"
        android:text="Camera"/>
    <TextView
        android:id="@+id/TaskDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Date: "
        app:layout_constraintTop_toBottomOf="@id/addImage"
        app:layout_constraintStart_toStartOf="@id/backToTaskMenu"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TaskDateTitle"
        app:layout_constraintTop_toTopOf="@id/TaskDateTitle"
        android:text="12/06/2023"
        app:layout_constraintBottom_toBottomOf="@id/TaskDateTitle"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:id="@+id/TaskDateInfo"/>
    <TextView
        android:id="@+id/TaskCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Category: "
        app:layout_constraintTop_toBottomOf="@id/TaskDateTitle"
        app:layout_constraintStart_toStartOf="@id/backToTaskMenu"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TaskCategoryTitle"
        app:layout_constraintTop_toTopOf="@id/TaskCategoryTitle"
        android:text="Personal"
        app:layout_constraintBottom_toBottomOf="@id/TaskCategoryTitle"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:id="@+id/TaskCategoryInfo"/>
    <TextView
        android:id="@+id/TaskNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name: "
        app:layout_constraintTop_toBottomOf="@id/TaskCategoryTitle"
        app:layout_constraintStart_toStartOf="@id/backToTaskMenu"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/TaskNameTitle"
        app:layout_constraintTop_toTopOf="@id/TaskNameTitle"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@id/TaskNameTitle"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:id="@+id/TaskNameInfo"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/EditInfo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/TaskNameInfo"
        app:layout_constraintStart_toStartOf="@id/TaskNameTitle"
        android:backgroundTint="#FF9800"
        android:text="Edit"
        android:layout_marginTop="20dp"/>

    <View
        android:visibility="gone"
        android:id="@+id/DarkBackgroundChange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/ChangeTaskMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/addcardfon"
        android:paddingBottom="5dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ChangeTaskName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ChangeNewTaskName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:hint="Change task name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ChangeTaskCategoryName"
            android:layout_width="120dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/ChangeTaskName"
            app:layout_constraintStart_toStartOf="@id/ChangeTaskName"
            android:layout_marginTop="5dp"
            android:backgroundTint="#E6E5E5"
            android:text="No Category"
            android:textSize="12sp"
            android:textColor="#2196F3"/>
        <ImageView
            android:id="@+id/change_calendar_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@id/ChangeTaskCategoryName"
            app:layout_constraintTop_toTopOf="@id/ChangeTaskCategoryName"
            android:src="@drawable/ic_calendar"
            android:padding="4dp"
            android:layout_marginStart="5dp"/>
        <com.google.android.material.button.MaterialButton
            android:visibility="visible"
            android:id="@+id/changeTaskDone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@id/ChangeTaskName"
            app:layout_constraintTop_toTopOf="@id/ChangeTaskCategoryName"
            android:backgroundTint="#2196F3"
            app:icon="@drawable/ic_done"
            android:paddingStart="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="45dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="15dp"
        android:id="@+id/TaskDateCard"
        android:visibility="gone">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ChangeTaskDate"
            app:boxCornerRadiusTopStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusBottomEnd="5dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:hint="Day/Month/Year"
                android:id="@+id/ChangeTaskDateInfo"
                android:paddingEnd="120dp"
                android:paddingStart="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|end"
            android:text="Done"
            android:id="@+id/btnDone"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/ChangeTaskCategoryOptions"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ChangeTaskMenu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="-80dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Category"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:id="@+id/addTaskNoCategoryOption"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:id="@+id/addTaskWorkOption"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:id="@+id/addTaskPersonalOption"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wishlist"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:id="@+id/addTaskWishlistOption"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:id="@+id/addTaskBirthdayOption"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>